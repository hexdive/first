@model IEnumerable<first.Models.Student>

<h2>Student List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Main Image</th>
            <th>Thumbnail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>
                    @if (item.ImageData != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ImageData)" width="100" height="80" />
                    }
                </td>
                <td>
                    @if (item.ThumbnailData != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ThumbnailData)" width="50" height="40" />
                    }
                </td>
                <td>
                    
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
